# Secciones comerciales de conductores organizadas por tipo de circuito
# Todas las secciones están en mm²

standard_sections:
  
  # Secciones para strings DC (fotovoltaicos)
  # Rango típico: 4-120 mm² (para distancias cortas a medias)
  dc_strings:
    mm2: [4, 6, 10, 16]
    description: "Secciones para strings fotovoltaicos DC"
    typical_current_range: "5-15 A"
    max_recommended_length: "500 m"
  
  # Secciones para nivel 1 DC (combinadores, subcampos)
  # Rango típico: 16-240 mm² (corrientes más altas, distancias medias)
  level_1_dc:
    mm2: [16, 25, 35, 50, 70, 95, 120, 150, 185, 240]
    description: "Secciones para combinadores DC y subcampos"
    typical_current_range: "50-200 A"
    max_recommended_length: "1000 m"
  
  # Secciones para circuitos AC (salida de inversores)
  # Rango completo: 25-500 mm² (corrientes altas, todas las distancias)
  ac_circuits:
    mm2: [25, 35, 50, 70, 95, 120, 150, 185, 240, 300, 400, 500]
    description: "Secciones para circuitos AC de salida de inversores"
    typical_current_range: "100-1000 A"
    max_recommended_length: "2000 m"

# Configuración adicional
circuit_selection_rules:
  
  # Reglas para selección automática de tipo de circuito
  auto_detection:
    dc_strings:
      max_current_threshold: 30  # A
      voltage_level: "DC_LV"  # DC Low Voltage
    
    level_1_dc:
      max_current_threshold: 300  # A
      voltage_level: "DC_MV"  # DC Medium Voltage
    
    ac_circuits:
      min_current_threshold: 50   # A
      voltage_level: "AC_LV"  # AC Low Voltage

# Metadata del archivo
metadata:
  version: "1.1"
  last_updated: "2025-06-30"
  standards_compliance: ["IEC 60364", "NEC 690", "IEC 62548"]
  notes: |
    - Las secciones están organizadas por tipo de aplicación
    - Cada grupo tiene rangos de corriente típicos
    - Se incluyen secciones de 4mm² para strings pequeños
    - Las secciones AC incluyen hasta 500mm² para grandes instalaciones